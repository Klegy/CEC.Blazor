@namespace CEC.Blazor.Server.Pages.Components

@inherits ListComponentBase<WeatherForecast>
<CascadingValue Value="@this.UIOptions">

    <CascadingValue Value="@this.Paging">
        <CascadingValue Value="@this.Service.RecordConfiguration">
            <CascadingValue Name="OnView" Value="@OnView" TValue="Action<int>">
                <CascadingValue Name="OnEdit" Value="@OnEdit" TValue="Action<int>">

                    <UICardList TItem="WeatherForecast" Items="this.Paging.Records" IsCollapsible="true" ListTitle="@this.ListTitle">
                        <TableHeader>

                            <UICardListHeaderRow TRecord="WeatherForecast" DisplayName="ID" FieldName="WeatherForecastID"></UICardListHeaderRow>
                            <UICardListHeaderRow TRecord="WeatherForecast" FieldName="Date" MaxRow="true"></UICardListHeaderRow>
                            <UICardListHeaderRow TRecord="WeatherForecast" FieldName="Summary"></UICardListHeaderRow>
                            <UICardListHeaderRow TRecord="WeatherForecast" FieldName="TemperatureC" DisplayName="Temp C"></UICardListHeaderRow>
                            <UICardListHeaderRow TRecord="WeatherForecast" FieldName="Summary"></UICardListHeaderRow>
                            <UICardListHeaderRow TRecord="WeatherForecast" FieldName="Outlook"></UICardListHeaderRow>
                            <UICardListEditButtonColumn IsHeader="true"></UICardListEditButtonColumn>

                        </TableHeader>
                        <RowTemplate>
                            <CascadingValue Name="RecordID" Value="@context.WeatherForecastID">

                                <UICardListDataRow>
                                    @context.WeatherForecastID
                                </UICardListDataRow>
                                <UICardListDataRow>
                                    @context.Date.ToShortDateString()
                                </UICardListDataRow>
                                <UICardListDataRow>
                                    @context.Summary
                                </UICardListDataRow>
                                <UICardListDataRow>
                                    @context.TemperatureC
                                </UICardListDataRow>
                                <UICardListDataRow>
                                    @context.Summary
                                </UICardListDataRow>
                                <UICardListDataRow>
                                    @context.Outlook
                                </UICardListDataRow>
                                <UICardListEditButtonColumn></UICardListEditButtonColumn>

                            </CascadingValue>

                        </RowTemplate>
                        <Navigation>

                            <UIListButtonRow>
                                <Paging>
                                    <UIPagingControl TRecord="WeatherForecast"></UIPagingControl>
                                </Paging>
                            </UIListButtonRow>

                        </Navigation>
                    </UICardList>
                </CascadingValue>
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>
<BootstrapModal @ref="this._BootstrapModal"></BootstrapModal>

