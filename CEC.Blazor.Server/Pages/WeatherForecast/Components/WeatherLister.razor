@namespace CEC.Blazor.Server.Pages.Components

@inherits ListComponentBase<WeatherForecast>
<CascadingValue Value="@this.UIOptions">

        <CascadingValue Value="@this.Service.RecordConfiguration">

            <CascadingValue Name="OnView" Value="@OnView" TValue="Action<int>">

                <CascadingValue Name="OnEdit" Value="@OnEdit" TValue="Action<int>">

                    <UICardList TItem="WeatherForecast" Paging="this.Paging" IsCollapsible="true" ListTitle="@this.ListTitle">

                        <TableHeader>

                            <UICardHeaderColumn Column="1" TRecord="WeatherForecast" DisplayName="ID" FieldName="WeatherForecastID"></UICardHeaderColumn>
                            <UICardHeaderColumn Column="2" TRecord="WeatherForecast" FieldName="Date"></UICardHeaderColumn>
                            <UICardHeaderColumn Column="3" TRecord="WeatherForecast" FieldName="Description"></UICardHeaderColumn>
                            <UICardHeaderColumn Column="4" TRecord="WeatherForecast" FieldName="TemperatureC" DisplayName="Temp C"></UICardHeaderColumn>
                            <UICardHeaderColumn Column="5" TRecord="WeatherForecast" FieldName="Summary"></UICardHeaderColumn>
                            <UICardHeaderColumn Column="6" TRecord="WeatherForecast" FieldName="Outlook"></UICardHeaderColumn>
                            <UICardEditButtonColumn Column="7" IsHeader="true"></UICardEditButtonColumn>

                        </TableHeader>

                        <RowTemplate>

                            <CascadingValue Name="RecordID" Value="@context.WeatherForecastID">

                                <UICardDataColumn Column="1">
                                    @context.WeatherForecastID
                                </UICardDataColumn>
                                <UICardDataColumn Column="2">
                                    @context.Date.ToShortDateString()
                                </UICardDataColumn>
                                <UICardDataColumn Column="3">
                                    @context.Description
                                </UICardDataColumn>
                                <UICardDataColumn Column="4">
                                    @context.TemperatureC
                                </UICardDataColumn>
                                <UICardDataColumn Column="5">
                                    @context.Summary
                                </UICardDataColumn>
                                <UICardDataColumn Column="6">
                                    @context.Outlook
                                </UICardDataColumn>
                                <UICardEditButtonColumn Column="7"></UICardEditButtonColumn>

                            </CascadingValue>

                        </RowTemplate>

                        <Navigation>

                            <UIListButtonRow>
                                <Paging>
                                    <UIPagingControl TRecord="WeatherForecast"></UIPagingControl>
                                </Paging>
                            </UIListButtonRow>

                        </Navigation>

                    </UICardList>

                </CascadingValue>

            </CascadingValue>

        </CascadingValue>

    </CascadingValue>

<BootstrapModal @ref="this._BootstrapModal"></BootstrapModal>

