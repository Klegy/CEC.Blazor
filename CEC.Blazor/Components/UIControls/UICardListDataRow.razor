@namespace CEC.Blazor.Components.UIControls

@inherits ApplicationComponentBase

@if (this.Show)
{
    @if (this.DoNavigation)
    {
        <td class="@this. cursor-hand" scope="row" @onclick="(e => this.Navigate())">
            @this.ChildContent
        </td>
    }
    else
    {
        <td class="@this.RowCss" scope="row">
            @this.ChildContent
        </td>
    }
}
